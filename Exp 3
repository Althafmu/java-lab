import java.util.Scanner;
class rev
 {
	public static void main(String[] args)
		{
		String o,rev = "";
		System.out.println("Enter the string to check palindrome");
		Scanner in = new Scanner(System.in);
		o = in.nextLine();
		int ol = o.length();
		for(int i=ol-1;i>=0;--i)
		{
			rev = rev+ o.charAt(i);
		}
		System.out.println(rev);
	}
}
